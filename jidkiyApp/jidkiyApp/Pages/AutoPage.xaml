<Page x:Class="jidkiyApp.Pages.AutoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:jidkiyApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutoPage">
   

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Autorisation" FontSize="25"/>
            <TextBlock Text="Login"/>
            <TextBox x:Name="TBLogin"/>
            <TextBlock Text="Password"/>
            <TextBox x:Name="TBPass"/>
            <Button x:Name="LogBtn" Content="Login" IsDefault="True" Click="LogBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
